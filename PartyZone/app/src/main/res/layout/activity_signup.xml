<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".signup"
    android:background="#52a4ff"
    android:windowActionBar="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Cancel"
                android:id="@+id/cancel"
                android:background="@drawable/round_button2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pic"
                    android:layout_gravity="right"
                    android:background="@drawable/home_image3"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="0dp" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your name as it would appear on the ISU directory"
                android:id="@+id/textView2"
                android:layout_marginBottom="5dp"
                android:textColor="#fdfcff"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:singleLine="false"
                android:layout_centerHorizontal="true"
                android:gravity="center|center_vertical|center_horizontal"
                android:layout_marginTop="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="25dp"


                android:id="@+id/username"
                android:hint=" Enter your first name"
                android:layout_weight="1"
                android:background="#fcf7ee"
                android:allowUndo="true"
                android:textColor="#101010"
                android:password="false"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:padding="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:paddingBottom="5dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="25dp"


                android:id="@+id/lastName"
                android:hint=" Enter your last name"
                android:layout_weight="1"
                android:background="#fdfcff"
                android:allowUndo="true"
                android:textColor="#101010"
                android:password="false"
                android:textStyle="bold"
                android:layout_below="@+id/username"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="15dp"
                android:textSize="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="25dp"

                android:id="@+id/uname"
                android:hint=" Enter your user name"
                android:layout_weight="1"
                android:background="#fdfcff"
                android:allowUndo="true"
                android:textColor="#101010"
                android:password="false"
                android:textStyle="bold"
                android:layout_below="@+id/lastName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="15dp"
                android:textSize="20dp"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="25dp"


                android:id="@+id/password"
                android:hint=" Enter your password"
                android:layout_weight="1"
                android:background="#fdfcff"
                android:allowUndo="true"
                android:textColor="#101010"
                android:password="true"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="15dp"
                android:textSize="20dp"
                android:layout_below="@+id/uname" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="25dp"


                android:id="@+id/confirm"
                android:hint=" Confirm password"
                android:layout_weight="1"
                android:background="#fdfcff"
                android:allowUndo="true"
                android:textColor="#101010"
                android:password="true"
                android:textStyle="bold"
                android:layout_below="@+id/password"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="0dp"
                android:textSize="20dp" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="submit"
                android:id="@+id/submit"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_button2"
                android:allowUndo="true" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
