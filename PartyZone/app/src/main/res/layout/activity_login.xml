<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".login"
    android:background="#52a4ff"
    android:windowActionBar="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pic"
                    android:layout_gravity="right"
                    android:background="@drawable/home_image3"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="0dp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:id="@+id/textView12"
                android:layout_marginBottom="5dp"
                android:textColor="#fdfcff"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:singleLine="false"
                android:layout_centerHorizontal="true"
                android:gravity="center|center_vertical|center_horizontal"
                android:layout_marginTop="0dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&quot;You miss 100% of the shots you don&apos;t take.&quot; Cheers."
                android:id="@+id/textView2"
                android:layout_marginBottom="5dp"
                android:textColor="#fdfcff"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:singleLine="false"
                android:layout_centerHorizontal="true"
                android:gravity="center|center_vertical|center_horizontal"
                android:layout_marginTop="10dp"
                android:textStyle="italic" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="25dp"


                android:id="@+id/username"
                android:hint=" Enter your username"
                android:layout_weight="1"
                android:background="#fcf7ee"
                android:allowUndo="true"
                android:textColor="#101010"
                android:password="false"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="25dp"


                android:id="@+id/password"
                android:hint=" Enter password"
                android:layout_weight="1"
                android:background="#fdfcff"
                android:allowUndo="true"
                android:textColor="#101010"
                android:password="true"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="0dp"
                android:textSize="20dp"
                android:layout_below="@+id/username" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="submit"
                android:id="@+id/submit"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_button2"
                android:allowUndo="true" />
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/cancel"
                android:background="@drawable/round_button2"
                android:layout_marginTop="5dp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
